{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Dataset Inspector",
  "version": "1.3.0",
  "identifier": "sh.train.datasetinspector",
  "build": {
    "beforeDevCommand": "npm run dev -- --hostname 127.0.0.1 --port 3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000"
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/App.icon"
    ],
    "targets": [
      "dmg",
      "app",
      "appimage",
      "deb",
      "rpm",
      "msi",
      "nsis"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/binbinsh/dataset-inspector/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDBGMzE5OTM1OTkxNTdGMTgKUldRWWZ4V1pOWmt4RC9iMThib3dwUnRHcjNCM1J6K2QvaU9VUURPUmdPTVoyUmN3SmlsTzVyam8K"
    }
  },
  "app": {
    "security": {
      "capabilities": [
        "default"
      ],
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$TEMP/dataset-inspector/**"
        ]
      }
    },
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Dataset Inspector",
        "width": 1440,
        "height": 950,
        "minWidth": 1440,
        "maxWidth": 1440,
        "minHeight": 820,
        "resizable": true
      }
    ]
  }
}
