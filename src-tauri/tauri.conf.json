{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LitData Viewer",
  "version": "0.1.0",
  "identifier": "ai.superplanner.litdata-viewer",
  "build": {
    "beforeDevCommand": "npm run dev -- --hostname 127.0.0.1 --port 3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "security": {
      "capabilities": ["default"]
    },
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "LitData Viewer",
        "width": 1440,
        "height": 950,
        "minWidth": 1440,
        "maxWidth": 1440,
        "minHeight": 820,
        "resizable": true
      }
    ]
  }
}
